<h4>
    Este es tu perfil @Context.User.Identity.Name
</h4>

<ul class="list-group">
    <li class="list-group-item">
        Oficio: @Context.User.FindFirst(ClaimTypes.Role).Value
    </li>
    <li class="list-group-item">
        Salario: @Context.User.FindFirstValue("Salario")
    </li>
    <li class="list-group-item">
        Departamento: @Context.User.FindFirstValue("Departamento")
    </li>
</ul>

<h4>Todos los claims</h4>

<ul class="list-group">
    @foreach (Claim claim in Context.User.Claims)
    {
        <li class="list-group-item">
            @claim.Type: <b>@claim.Value</b>
        </li>
    }
</ul>